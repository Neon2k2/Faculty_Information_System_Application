@model IEnumerable<Faculty_Information_System_MVC_Layer.Models.FacultyVM>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/Style/StyleSheet3.css" />


<div class="row">
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowFac" class="text-decoration-none text-white">Faculties</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowDept" class="text-decoration-none text-white">Departments</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowCourse" class="text-decoration-none text-white">Courses</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowSubject" class="text-decoration-none text-white">Subjects</a>
      </div>
    </div>
   </div>
</div>

<br/>

<div class="row">
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowCourTaught" class="text-decoration-none text-white">Courses Taught</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowGrant" class="text-decoration-none text-white">Grants</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowPublish" class="text-decoration-none text-white">Publications</a>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card" style="background-color: #343a40">
      <div class="card-body">
        <a asp-action="ShowCourSub" class="text-decoration-none text-white">SubjCourse</a>
      </div>
    </div>
  </div>
</div>

<br/>

@*=============================================================================================*@




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacultyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pincode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pincode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationId)
            </td>
            
        </tr>
}
    </tbody>
</table>

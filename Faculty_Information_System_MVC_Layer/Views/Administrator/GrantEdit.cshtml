@model Faculty_Information_System_MVC_Layer.Models.GrantVM

<link rel="stylesheet" href="~/Style/StyleSheet3.css" />

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GrantEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GrantId" class="control-label"></label>
                <input asp-for="GrantId" class="form-control" />
                <span asp-validation-for="GrantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <input asp-for="FacultyId" class="form-control" />
                <span asp-validation-for="FacultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrantTitle" class="control-label"></label>
                <input asp-for="GrantTitle" class="form-control" />
                <span asp-validation-for="GrantTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrantDescription" class="control-label"></label>
                <input asp-for="GrantDescription" class="form-control" />
                <span asp-validation-for="GrantDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <p>
    <button class="rounded-left btn-dark"><a asp-action="ShowGrant" class="text-decoration-none text-white">Back to Grants</a></button>
<br/></p>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

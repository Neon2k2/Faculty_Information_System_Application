@model IEnumerable<Faculty_Information_System_MVC_Layer.Models.DepartmentVM>


<link rel="stylesheet" href="~/Style/StyleSheet3.css" />

<p>
    <a asp-action="DeptCreate">Create New Department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Update", "DeptEdit", new { id=item.DepartmentId }) |
                
                @Html.ActionLink("Delete", "DeptDelete", new { id=item.DepartmentId })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
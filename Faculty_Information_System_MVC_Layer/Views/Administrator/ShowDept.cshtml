@model IEnumerable<Faculty_Information_System_MVC_Layer.Models.DepartmentVM>


<link rel="stylesheet" href="~/Style/StyleSheet3.css" />



<p>
    <button class="rounded-left btn-dark"><a asp-action="DeptCreate" class="text-decoration-none text-white">Create New Department</a></button>
<br/></p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Update", "DeptEdit", new { id=item.DepartmentId }) |
                
                @Html.ActionLink("Delete", "DeptDelete", new { id=item.DepartmentId })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <p>
    <button class="rounded-left btn-dark"><a asp-action="Index" class="text-decoration-none text-white">Back to Home</a></button>
<br/></p>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
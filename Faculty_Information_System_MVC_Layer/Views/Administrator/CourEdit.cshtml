@model Faculty_Information_System_MVC_Layer.Models.CourseVM

@{
    ViewData["Title"] = "CourEdit";
}
<link rel="stylesheet" href="~/Style/StyleSheet3.css" />

<h1>Update Course Info</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CourEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseCredits" class="control-label"></label>
                <input asp-for="CourseCredits" class="form-control" />
                <span asp-validation-for="CourseCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptId" class="control-label"></label>
                <input asp-for="DeptId" class="form-control" />
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <p>
    <button class="rounded-left btn-dark"><a asp-action="ShowCourse" class="text-decoration-none text-white">Back to Courses</a></button>
<br/></p>

</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
